
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum USER__ROLE {
  ADMIN 
  STUDENT
  MEMEBER
}
model User{
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  first__name String
  last__name  String
  email__id   String @unique
  password    String
  photo__URL  String
  phone__numb Int?
  gender      String
  role        USER__ROLE @default(STUDENT)
  postedBlogs Blog[]
}


model Blog{
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  title         String
  slug          String @unique
  sub_title     String
  readTime      String 
  tags          String[]
  html          String
  cover         String
  thumbnail     String
  views         Int @default(0)
  creator User  @relation(fields: [authorId], references: [id])
  authorId      String  @db.ObjectId
}