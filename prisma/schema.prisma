generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



 enum USER__ROLE {
  ADMIN 
  MEMBER
  STUDENT
}

model User {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  profile   ProfileInfo?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
  country   String
  interestedIn String[]
  role  USER__ROLE @default(MEMBER)
}

model ProfileInfo{
  id    String    @id @default(auto()) @map("_id") @db.ObjectId
  joinerId  User  @relation(fields: [authorId], references: [id])
  authorId  String @db.ObjectId @unique
  firstName String
  lastName  String
  userName  String? @unique
  photoURL  String
  phoneNum  String
  email     String @unique
  age       Int
  gender    String
}

