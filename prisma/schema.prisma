generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



enum USER__ROLE {
  ADMIN 
  MEMBER
  STUDENT
}
model User{
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  first__name String
  last__name  String
  email__id   String @unique
  password    String
  photo__URL  String
  phone__numb Int?
  gender      String
  // token       String[]
  role        USER__ROLE @default(MEMBER)
  postedBlogs Blog[]
}

model Course{
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  slug    String @unique
  fee     Int
}

model Blog{
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  title         String
  slug          String @unique
  readTime      String 
  html          String
  views         Int
  creator User  @relation(fields: [authorId], references: [id])
  authorId      String  @db.ObjectId
}
